<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            card_view:srcCompat="@drawable/ic_wheat_sack" />

        <TextView
            android:id="@+id/title_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/img_item_photo"
            android:ellipsize="end"
            android:fontFamily="@font/allerta"
            android:maxLines="1"
            android:text="Gabah"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/today_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_commodity"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@id/img_item_photo"
            android:text="Harga hari ini : Rp. 4600/kg" />

        <TextView
            android:id="@+id/yesterday_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_price"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@id/img_item_photo"
            android:text="Harga kemarin : Rp. 4600/kg" />

        <TextView
            android:id="@+id/forecast_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yesterday_price"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@id/img_item_photo"
            android:text="Prediksi Besok : Rp. 4700/kg" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>